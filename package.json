{
  "name": "ts-node-api-starter",
  "version": "1.0.0",
  "description": "Starter for JSON REST APIs with Express.js and TypeScript",
  "main": "src/app.ts",
  "scripts": {
    "test": "mocha -r ts-node/register ./src/tests/*.spec.ts",
    "dev": "nodemon",
    "start": "ts-node ./src/app.ts"
  },
  "author": "James Davies",
  "license": "MIT",
  "dependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/express": "^4.11.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^9.4.7",
    "@types/winston": "^2.3.8",
    "body-parser": "^1.18.2",
    "express": "^4.16.3",
    "morgan": "^1.9.0",
    "ts-node": "^5.0.1",
    "typescript": "^2.7.2",
    "winston": "^3.0.0-rc3"
  },
  "devDependencies": {
    "@types/mocha": "^2.2.48",
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "chai-json-schema": "^1.5.0",
    "mocha": "^5.0.4",
    "nodemon": "^1.17.2"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": "ts",
    "exec": "ts-node --type-check ./src/app.ts"
  }
}
