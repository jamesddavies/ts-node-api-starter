{
    "compileOnSave": false,
    "compilerOptions": {
        "declaration": false,
        "forceConsistentCasingInFileNames": true,
        "lib": ["es6", "dom"],
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "noUnusedLocals": true,
        "rootDir": "src",
        "strictNullChecks": true,
        "suppressImplicitAnyIndexErrors": true,
        "target": "es5"        
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}